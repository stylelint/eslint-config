{
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:jest/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "es6": true,
    "node": true
  },
  "plugins": [
    "node",
    "sort-requires"
  ],
  "rules": {
    "eqeqeq": "error",
    "no-use-before-define": ["error", "nofunc"],
    "no-var": "error",
    "object-shorthand": "error",
    "one-var": ["error", "never"],
    "prefer-const": "error",
    "sort-requires/sort-requires": "error",
    "strict": ["error", "global"],
    "jest/no-identical-title": "warn"
  }
}
